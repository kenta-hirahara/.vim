filetype plugin indent on

" Enable C++ specific settings
autocmd FileType cpp setlocal cindent

" General settings
source ~/.vim/vimrc.d/settings.vim

" Key mappings
source ~/.vim/vimrc.d/mappings.vim

" Plugin configurations
source ~/.vim/vimrc.d/plugins.vim

" Appearance settings
source ~/.vim/vimrc.d/appearance.vim

" Custom commands
source ~/.vim/vimrc.d/commands.vim

" Swap files outputs
source ~/.vim/vimrc.d/swapfiles.vim
" Config snipMate
source ~/.vim/vimrc.d/snipmate_config.vim
